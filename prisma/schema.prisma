generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  name        String
  password    String
  telephone   String      @default("")
  role        Role        @default(DRIVER)
  gender      Gender      @default(MALE)
  city        String      @default("")
  state       String      @default("")
  instructor  Instructor?
  driver      Driver?
}

model Instructor {
  id        Int     @id @default(autoincrement())
  priceHour Decimal
  latitude  Float?
  longitude Float?
  bio       String
  active    Boolean
  userId    Int     @unique

  user                 User                 @relation(fields: [userId], references: [id])
  instructorCategories InstructorCategory[]
}

model Driver {
  id               Int     @id @default(autoincrement())
  active           Boolean
  userId           Int     @unique

  user            User            @relation(fields: [userId], references: [id])
}

model LicenseCategory {
  id                   Int                  @id @default(autoincrement())
  id_seeder            Int                  @unique
  acronym              Category             @unique
  description          String
  instructorCategories InstructorCategory[]
}

model InstructorCategory {
  id              Int             @id @default(autoincrement())
  instructorId    Int
  categoryId      Int
  instructor      Instructor      @relation(fields: [instructorId], references: [id])
  licenseCategory LicenseCategory @relation(fields: [categoryId], references: [id])
}

enum Gender {
  MALE
  FEMALE
}

enum Role {
  DRIVER
  INSTRUCTOR
}

enum Category {
  A
  B
  C
  D
  E
}
